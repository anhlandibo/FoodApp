<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardElevation="4dp">
    <?xml version="1.0" encoding="utf-8"?>
    <!-- activity_main.xml -->

    <!-- Container for centering content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- First Order Card -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/lightOrange"
            android:padding="16dp">
            <!--            android:background="@drawable/grey_background"-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:orientation="vertical"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent">

                <!-- Header with image, title, and status badge -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Logo ImageView -->
                    <ImageView
                        android:id="@+id/img_logo1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circular_image"
                        android:scaleType="centerCrop"
                        android:src="https://placehold.co/40x40" />

                    <!-- Business Name -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_business_name1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FoodApp"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Spacer -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <!-- Status Badge -->
                    <TextView
                        android:id="@+id/orderStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/badge_background"
                        android:paddingStart="8dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="4dp"
                        android:text="Giao thành công"
                        android:textColor="#059669"
                        android:textSize="12sp" />
                    <!-- green-600 approx -->

                </LinearLayout>

                <!-- Order Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <!-- Order Code -->
                    <TextView
                        android:id="@+id/txt_order_code1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mã đơn hàng:  "
                        android:textColor="#4B5563" />
                    <TextView
                        android:id="@+id/orderId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@orderId"
                        android:textColor="#4B5563" />
                    <!-- gray-600 -->
                        </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <!-- Order Time -->
                    <TextView
                        android:id="@+id/txt_order_time1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thời gian đặt hàng:   "
                        android:textColor="#4B5563" />
                        <TextView
                            android:id="@+id/orderTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@orderTime"
                            android:textColor="#4B5563" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <!-- Points Earned -->
<!--                <TextView-->
<!--                    android:id="@+id/txt_points1"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginTop="8dp"-->
<!--                    android:text="Điểm tích lũy:    "-->
<!--                    android:textColor="#2563EB"-->
<!--                    android:textSize="14sp"/>-->
<!--                    <TextView-->
<!--                        android:id="@+id/order"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginTop="8dp"-->
<!--                        android:text="+2.888"-->
<!--                        android:textColor="#2563EB"-->
<!--                        android:textSize="14sp"/>-->

                    <!-- blue-600 -->
            </LinearLayout>



        <!-- To simulate the span styles, you could use Spannable styling programmatically -->
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>