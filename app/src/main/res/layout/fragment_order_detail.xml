<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f7f6"
    android:orientation="vertical">
    <!--    tools:context=".MainActivity">-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp"
        app:layout_constraintTop_toTopOf="parent">
        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:divider="?android:attr/dividerHorizontal"
            android:orientation="vertical"
            android:padding="16dp"
            android:showDividers="end">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!--Back Button-->
                <ImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="#1A8CD8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Quay lại"
                    android:textColor="#1A8CD8"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Chi tiết đơn hàng"
                android:textColor="#212121"
                android:textSize="24sp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f5f7f6">


            <!-- Card Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="#FFFFFF"
                android:clipToPadding="false"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="0dp">


                <!-- Shop Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F9FAF9"
                    android:divider="?android:attr/dividerHorizontal"
                    android:dividerPadding="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:showDividers="end">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:background="@android:color/darker_gray"
                        android:clipToOutline="true"
                        android:outlineProvider="background"
                        android:scaleType="centerCrop"
                        android:src="@drawable/shop_logo" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FoodApp"
                            android:textColor="#003A70"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giao thành công"
                            android:textColor="#2A8A2A"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Order Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginBottom="4dp"
                            android:text="Mã đơn hàng:"
                            android:textColor="#424242"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/orderId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginBottom="4dp"
                            android:text="OV108916504567067"
                            android:textColor="#F37021"
                            android:textSize="14sp" />

<!--                        <ImageButton-->
<!--                            android:layout_width="20dp"-->
<!--                            android:layout_height="20dp"-->
<!--                            android:layout_marginStart="8dp"-->
<!--                            android:background="?attr/selectableItemBackgroundBorderless"-->
<!--                            android:src="@drawable/ic_copy"-->
<!--                            app:tint="#1A8CD8" />-->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Thời gian đặt hàng:   "
                            android:textColor="#424242"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/orderedDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="17:54 - 16/04/2025"
                            android:textColor="#424242"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thời gian giao hàng:  "
                            android:textColor="#424242"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/deliveredDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="17:54 - 16/04/2025"
                            android:textColor="#424242"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Items List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/orderdetailRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F9FAF9"
                    android:clipToPadding="false"
                    android:divider="?android:attr/dividerVertical"
                    android:dividerPadding="8dp"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:showDividers="middle"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="1" />
                <!-- ======= Payment Summary + Collapse ======= -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingTop="24dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Thanh toán"
                        android:textColor="#222222"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- row: Tổng tiền hàng -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:divider="#D1D5DB"
                        android:dividerPadding="0dp"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp"
                        android:showDividers="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tổng tiền hàng:"
                            android:textColor="#4B5563"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="102.021₫"
                            android:textColor="#4B5563"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- row: Tiền chuyển khoản -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:divider="#D1D5DB"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp"
                        android:showDividers="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tiền chuyển khoản:"
                            android:textColor="#4B5563"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/paid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-102.021₫"
                            android:textColor="#4B5563"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- row: Cần thanh toán -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:divider="#D1D5DB"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp"
                        android:showDividers="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cần thanh toán:"
                            android:textColor="#EA580C"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/unpaid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0₫"
                            android:textColor="#EA580C"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <!-- Collapse Button -->
                    <Button
                        android:id="@+id/collapseButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:drawableEnd="@drawable/ic_chevron_up"
                        android:drawablePadding="4dp"
                        android:padding="8dp"
                        android:text="Rút gọn"
                        android:textColor="#0B74C9"
                        android:textSize="16sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/receiptButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_button_yellow_border"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="Xem hoá đơn"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

